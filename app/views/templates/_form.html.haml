= simple_form_for @template do |f|
  - if @template.errors.any?
    #error_explanation
      %h5
        = "#{pluralize(@template.errors.count, "error")} prohibited this template from being saved:"
      %ul
        - @template.erros.full_messages.each do |msg|
          %li
            = mgs
  .form-group
    = f.input :title, class: "form-control"
  .form-group
    = f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control"
  .form-group
    = f.button :submit
