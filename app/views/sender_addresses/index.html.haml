.container
  .col-sm-10.col-sm-offset-1.col-xs-12.blog-content
    - @sender_addresses.each do |sender_address|
      .col-xs-12
        .text-center
          %h2= sender_address.title
          %h6= sender_address.created_at.strftime('%b %d, %Y')
        %div
          = sender_address.body.html_safe
        .text-center
          = link_to "READ MORE", sender_address_path(sender_address)
        %br/
  .col-sm-10.col-sm-offset-1.col-xs-12
    = link_to "New Sender Address", new_sender_address_path
