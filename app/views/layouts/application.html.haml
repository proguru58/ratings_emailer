!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title RatingsEmailer
    = csrf_meta_tags
    = stylesheet_link_tag    'application', href: "https://fonts.googleapis.com/icon?family=Material+Icons"
    = stylesheet_link_tag    'application', href: "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700"
    = stylesheet_link_tag    'application', href: "https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = yield :koudoku
  %body
    = render 'layouts/navigation'
    .wrapper
      .header
      .main.main-raised
        .section
          .container-fluid
            = render 'layouts/messages'
          .container
            = yield
    = render 'layouts/footer'
